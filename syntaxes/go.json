{
    "scopeName": "go.injection",
    "injectionSelector": "L:source.go",
    "patterns": [
        {
            "include": "#todo-keyword"
        },
        {
            "include": "#info-keyword"
        },
        {
            "include": "#warn-keyword"
        },
        {
            "include": "#go-err-variable"
        },
        {
            "include": "#go-nil-constant"
        },
        {
            "include": "#go-variable-type"
        },
        {
            "include": "#go-variable-local"
        },
        {
            "include": "#go-struct-tag"
        }
    ],
    "repository": {
        "todo-keyword": {
            "match": "TODO",
            "name": "keyword.todo"
        },
        "info-keyword": {
            "match": "INFO",
            "name": "keyword.info"
        },
        "warn-keyword": {
            "match": "WARN",
            "name": "keyword.warn"
        },
        "go-err-variable": {
            "patterns": [
                {
                    "match": "[A-Za-z0-9_-]+Error|[A-Za-z0-9_-]+error|\\berror[A-Za-z_]+\\b|\\berr\\b|Err[A-Za-z0-9_-]+|Error[A-Za-z0-9_-]+",
                    "name": "variable.err.go"
                }
            ]
        },
        "go-nil-constant": {
            "patterns": [
                {
                    "match": "nil",
                    "name": "constant.nil.go"
                }
            ]
        },
        "go-variable-type": {
            "patterns": [
                {
                    "match": "([.]([A-Za-z0-9_-]+)[.])",
                    "name": "variable.type.go"
                }
            ]
        },
        "go-variable-local": {
            "patterns": [
                {
                    "match": "([.]([A-Za-z0-9_-]+))",
                    "name": "variable.type.local.go"
                }
            ]
        },
        "go-struct-tag": {
            "patterns": [
                {
                    "match": "(\\w+):(?=\")",
                    "name": "variable.type.tag.go"
                }
            ]
        }
    }
}